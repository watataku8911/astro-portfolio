---
import { parseISO, format } from "date-fns";

// 日付整形関数
const datePlasticSurgery = (dateString: string): string => {
  const date = parseISO(dateString);
  return format(date, "yyyy年M月d日");
};

// 文字を丸める関数
const split = (text: string, maxLength: number): string => {
  let modStr = "・・・";

  if (text.length > maxLength) {
    modStr = text.substr(0, maxLength) + "...";
  } else {
    modStr = text;
  }
  return modStr;
};

type Props = {
  target: "_blank" | "_self" | "_top" | "_parent";
  image: string;
  title: string;
  href: string;
  time: string;
};

const { target, image, href, title, time } = Astro.props;
---

<article class="card">
  <a href={href} target={target} class="link">
    <figure><img src={image} alt={title} class="card__thunbnail" /></figure>
    <h4 class="card__title">
      {split(title, 30)}
    </h4>
    <time datetime="YYYY年MM月DD日" class="card__date">
      {datePlasticSurgery(time)}
    </time>
  </a>
</article>

<style>
  .link {
    display: block;
  }
  .card {
    text-align: center;
    position: relative;
    width: var(--card-size-width-pc);
    height: 300px;
    background-color: var(--card-bgColor);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    margin-bottom: 20px;
  }
  @media screen and (min-width: 482px) and (max-width: 1025px) {
    .card {
      height: 230px;
    }
  }
  @media screen and (max-width: 481px) {
    .card {
      width: 48%;
      height: 200px;
    }
  }

  .card:hover {
    box-shadow: none;
    transform: translateY(5px);
  }

  .card__thunbnail {
    width: 100%;
    height: 190px;
  }
  @media screen and (min-width: 482px) and (max-width: 1025px) {
    .card__thunbnail {
      height: 120px;
    }
  }
  @media screen and (max-width: 481px) {
    .card__thunbnail {
      height: 100px;
    }
  }

  .card__title {
    text-align: left;
    word-break: break-all;
    padding: 0 0 0 5px;
    letter-spacing: 1px;
    font-size: 1rem;
    color: var(--accent-color);
  }
  @media screen and (max-width: 1026px) {
    .card__title {
      font-size: 0.8rem;
    }
  }

  .card__date {
    position: absolute;
    bottom: 5px;
    right: 5px;
    color: var(--subtextColor);
  }
</style>
