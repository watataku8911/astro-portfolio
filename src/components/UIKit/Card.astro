---
import { datePlasticSurgery } from "../../ts/function";

type Props = {
  target: "_blank" | "_self" | "_top" | "_parent";
  image: string;
  title: string;
  href: string;
  time: string;
};

const { target, image, href, title, time } = Astro.props;
---

<article class="card">
  <a href={href} target={target} class="link">
    <figure><img src={image} alt={title} class="card__thunbnail" /></figure>
    <h4 class="card__title">
      {title}
    </h4>
    <time datetime="YYYY年MM月DD日" class="card__date">
      {datePlasticSurgery(time)}
    </time>
  </a>
</article>

<style>
  .link {
    display: block;
  }

  .card {
    text-align: center;
    position: relative;
    width: var(--card-size-width-3col);
    height: 300px;
    background-color: var(--card-bgColor);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }
  @media screen and (min-width: 482px) and (max-width: 1025px) {
    .card {
      height: 230px;
    }
  }
  @media screen and (max-width: 481px) {
    .card {
      width: var(--card-size-width-2col);
      height: 200px;
    }
  }

  .card:hover {
    box-shadow: none;
    transform: translateY(5px);
  }

  .card__thunbnail {
    width: 100%;
    height: 190px;
    object-fit: cover;
  }
  @media screen and (min-width: 482px) and (max-width: 1025px) {
    .card__thunbnail {
      height: 120px;
    }
  }
  @media screen and (max-width: 481px) {
    .card__thunbnail {
      height: 80px;
    }
  }

  .card__title {
    text-align: left;
    -webkit-line-clamp: 4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    word-break: break-all;
    padding: 0 15px 0 15px;
    letter-spacing: 1px;
    font-size: 1rem;
    color: var(--accent-color);
  }
  @media screen and (max-width: 1026px) {
    .card__title {
      font-size: 0.8rem;
      -webkit-line-clamp: 3;
    }
  }

  .card__date {
    position: absolute;
    bottom: 5px;
    right: 15px;
    font-size: 1rem;
    color: var(--subtextColor);
  }
  @media screen and (max-width: 1026px) {
    .card__date {
      font-size: 0.8rem;
    }
  }
</style>
