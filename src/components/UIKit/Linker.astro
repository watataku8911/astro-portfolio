---
type Props = {
  href: string;
  target: "_blank" | "_self" | "_top" | "_parent";
  msg: string;
};

const { href, target, msg } = Astro.props;
---

<a class="linker__title" href={href} target={target}>
  {msg}
</a>

<style>
  .linker__title {
    display: inline-block;
    color: #000;
    background-color: #fff;
    box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    padding: 8px;
    border-radius: 10px;
  }

  .linker__title:hover {
    transform: translate3d(0, 5px, 0);
    box-shadow: none;
  }
</style>
