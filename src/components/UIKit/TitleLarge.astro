---
type Props = {
  titleEn: string;
  titleJa: string;
};

const { titleEn, titleJa } = Astro.props;
---

<h1 class="title-large">
  {titleEn}<span class="title-large__sub">{titleJa}</span>
</h1>

<script>
  import { intersection } from "../../ts/function";

  intersection(document.querySelectorAll(".title-large"));
</script>

<style>
  .title-large {
    color: var(--accent-color);
    font-size: clamp(1.875rem, -0.313rem + 7.29vw, 4.5rem);
    opacity: 0;
    transform: translate3d(-30px, 0, 0);
  }
  @media screen and (max-width: 1025px) {
    .title-large {
      transform: translate3d(0, 0, 0);
    }
  }

  .title-large__sub {
    color: var(--subtextColor);
    font-size: 0.25em;
  }

  .title-large__sub::before {
    content: "";
    display: inline-block;
    width: 20px;
    border-bottom: solid 1px var(--subtextColor);
    margin: 0 5px 0 5px;
  }

  .title-large.active {
    animation: animationName 0.5s ease 0.5s 1 forwards;
  }

  @keyframes animationName {
    100% {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }
</style>
