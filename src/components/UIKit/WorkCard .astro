---
import IconTag from "/icon/icon_tag_navy.svg";

type Props = {
  image: string;
  title: string;
  use_tech: string;
  href: string;
  comment: string;
};

const { image, href, title, use_tech, comment } = Astro.props;
---

<article class="work-card">
  <a href={href} class="link">
    <figure class="work-card__thumbnail-box">
      <img src={image} alt={title} class="work-card__thumbnail-box__image" />
    </figure>
    <div class="work-card__text">
      <p class="work-card__tag text-color">
        <img src={IconTag} alt="タグ" />{use_tech}
      </p>
      <h4 class="work-card__title text-color">
        {title}
      </h4>
      <p class="work-card__comment text-color">
        {comment}
      </p>
    </div>
  </a>
</article>

<script>
  import { intersection } from "../../ts/function";

  intersection(document.querySelectorAll(".work-card"));
</script>

<style>
  .link {
    display: block;
  }

  .link:hover .work-card__thumbnail-box .work-card__thumbnail-box__image {
    box-shadow: none;
    transform: scale(1.1);
  }

  .work-card {
    width: var(--card-size-width-pc);
    height: 350px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    background-color: var(--card-bgColor);
    margin-bottom: 30px;
    opacity: 0;
    transform: translateY(30px);
  }
  @media screen and (max-width: 481px) {
    .work-card {
      width: 100%;
      margin-bottom: 20px;
    }
  }

  .work-card.active:nth-child(1) {
    animation: animationName 0.5s ease 0.5s 1 forwards;
  }

  .work-card.active:nth-child(2) {
    animation: animationName 0.5s ease 1s 1 forwards;
  }
  @media screen and (max-width: 481px) {
    .work-card.active:nth-child(2) {
      animation: animationName 0.5s ease 0.5s 1 forwards;
    }
  }

  .work-card.active:nth-child(3) {
    animation: animationName 0.5s ease 1.5s 1 forwards;
  }
  @media screen and (max-width: 481px) {
    .work-card.active:nth-child(3) {
      animation: animationName 0.5s ease 0.5s 1 forwards;
    }
  }

  .work-card__thumbnail-box {
    overflow: hidden;
  }

  .work-card__thumbnail-box__image {
    max-width: 100%;
    height: 200px;
    object-fit: fill;
  }
  @media screen and (min-width: 482px) and (max-width: 1026px) {
    .work-card__thumbnail-box__image {
      height: 120px;
    }
  }

  .text-color {
    padding: 0 0 0 5px;
    color: var(--accent-color);
  }

  .work-card__tag {
    margin: 2px 0 0 2px;
    font-size: 1em;
    word-break: break-all;
  }

  .work-card__title {
    font-size: 1.25em;
    margin: 5px 0 8px 0;
    word-break: break-all;
  }

  @keyframes animationName {
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
