---
import IconTag from "/icon/icon_tag_navy.svg";

type Props = {
  image: string;
  title: string;
  text: string;
};

const { image, title, text } = Astro.props;
---

<article class="service-card">
  <img src={image} alt={title} class="service-card__thunbnail" />
  <h4 class="service-card__title black">
    {title}
  </h4>
  <p class="service-card__text black text">
    {text}
  </p>
</article>

<style>
  .service-card {
    position: relative;
    width: 28vw;
    height: 550px;
    background-color: #fffdf9;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }
  @media screen and (min-width: 482px) and (max-width: 1025px) {
    .service-card {
      width: 28vw;
      height: 400px;
    }
  }
  @media screen and (max-width: 481px) {
    .service-card {
      width: 95vw;
      height: 500px;
      margin-bottom: 20px;
    }
  }

  .service-card__thunbnail {
    max-width: 100%;
    height: auto;
  }

  .black {
    padding: 0 0 0 5px;
    color: black;
  }

  .text {
    color: #222;
  }

  .service-card__tag {
    font-size: 1rem;
  }

  .service-card__title {
    text-align: center;
    font-size: 1.35rem;
    margin-bottom: 10px;
  }
</style>
