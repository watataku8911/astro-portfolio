---
type Props = {
  image: string;
  width: number;
  height: number;
  title: string;
  text: string;
};
const { image, width, height, title, text } = Astro.props;
---

<article class="service-card">
  <img
    class="service-card__thunbnail"
    src={image}
    width={width}
    height={height}
    alt={title}
  />
  <h3 class="service-card__title text-color">
    {title}
  </h3>
  <p class="service-card__text text-color">
    {text}
  </p>
</article>

<script>
  import { intersection } from "../../ts/function";

  intersection(document.querySelectorAll(".service-card"));
</script>

<style>
  .service-card {
    background-color: var(--card-bgColor);
    opacity: 0;
    transform: translate3d(0, 30px, 0);
  }
  @media screen and (max-width: 1025px) {
    .service-card {
      transform: translate3d(0, 0, 0);
    }
  }

  .service-card.active:nth-child(1) {
    animation: animationName 0.5s ease 0.5s 1 forwards;
  }

  .service-card.active:nth-child(2) {
    animation: animationName 0.5s ease 1s 1 forwards;
  }

  .service-card.active:nth-child(3) {
    animation: animationName 0.5s ease 1.5s 1 forwards;
  }

  @media screen and (max-width: 481px) {
    .service-card.active:nth-child(2),
    .service-card.active:nth-child(3) {
      animation: animationName 0.5s ease 0.5s 1 forwards;
    }
  }

  .text-color {
    color: var(--accent-color);
    word-break: break-all;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: auto;
  }

  .service-card__title {
    text-align: center;
    padding: 0 16px;
    font-size: clamp(1rem, 0.909rem + 0.45vw, 1.25rem);
    -webkit-line-clamp: 1;
  }

  .service-card__text {
    padding: 8px 16px 16px 16px;
    font-size: clamp(0.75rem, 0.659rem + 0.45vw, 1rem);
  }

  @keyframes animationName {
    100% {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }
</style>
