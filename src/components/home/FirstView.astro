<section class="first-view">
  <div class="first-view__title center">
    <h1 class="first-view__title__text">Welcome&nbsp;to</h1>
    <h1 class="first-view__title__text margin-left">my&nbsp;portfolio.</h1>
  </div>

  <h2 class="first-view__text bottom-left">
    Markup&nbsp;developer/Frontend&nbsp;developer.
  </h2>

  <div class="pic_down bottom-right"></div>
</section>

<script>
  import {
    surroundSpan,
    opningAnimation,
    closeLoadingScreen,
  } from "../../ts/function";

  const body = document.querySelector("body");

  surroundSpan(".first-view__title__text");
  surroundSpan(".first-view__text");

  const jsLoaderBg = ".js-loader-bg";
  const firstViewTitle = ".first-view__title__text span";
  const firstViewtext = ".first-view__text span";
  const picDown = ".pic_down";

  //メイン
  if (!sessionStorage.getItem("visited")) {
    sessionStorage.setItem("visited", "true");
    window.onload = () => {
      setTimeout(() => {
        opningAnimation(jsLoaderBg, firstViewTitle, firstViewtext, picDown);
        if (body != null) {
          body.classList.add("loaded");
        }
      }, 2500);
    };
  } else {
    window.onload = () => {
      setTimeout(() => {
        closeLoadingScreen(jsLoaderBg);
      }, 2500);
      if (body != null) {
        body.classList.add("loaded");
      }
    };
  }
</script>

