<section class="first-view">
  <div class="first-view__title center">
    <h1 class="first-view__title__text">Welcome&nbsp;to</h1>
    <h1 class="first-view__title__text margin-left">my&nbsp;portfolio.</h1>
  </div>

  <h2 class="first-view__text bottom-left">
    Markup&nbsp;developer/Frontend&nbsp;developer.
  </h2>

  <div class="pic_down right"></div>
</section>

<script>
  import {
    surroundSpan,
    opningAnimation,
    closeLoadingScreen,
  } from "../../ts/function";

  surroundSpan(".first-view__title__text");
  surroundSpan(".first-view__text");

  const bodyElement = document.querySelector("body") as HTMLBodyElement;
  if (!sessionStorage.getItem("visited")) {
    sessionStorage.setItem("visited", "true");
    window.onload = () => {
      setTimeout(() => {
        opningAnimation(
          ".js-loader-bg",
          ".first-view__title span",
          ".first-view__text span",
          ".pic_down"
        );
        if (bodyElement != null) {
          bodyElement.classList.add("loaded");
        }
      }, 1500);
    };
  } else {
    window.onload = () => {
      setTimeout(() => {
        closeLoadingScreen(".js-loader-bg");
        if (bodyElement != null) {
          bodyElement.classList.add("loaded");
        }
      }, 1500);
    };
  }
</script>

