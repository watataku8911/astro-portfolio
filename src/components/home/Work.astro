---
import workList from "../../../public/data/work.json";
import WorkCard from "../UIKit/WorkCard .astro";

type Work = {
  id: number;
  image: string;
  title: string;
  href: string;
  tag: string;
  comment: string;
};
---

<section class="works" id="work">
  <div class="works__work">
    <h2 class="works__work__title">Work.</h2>
    <div class="works__work__inner">
      {
        workList.map((work: Work) => (
          <WorkCard
            image={work.image}
            href={work.href}
            title={work.title}
            tag={work.tag}
            comment={work.comment}
          />
        ))
      }
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const works = ".works";
  const worksWorkTitle = ".works__work__title";
  const worksworkInner = ".works__work__inner";
  gsap.set(worksWorkTitle, {
    opacity: 0,
    y: 10,
  });
  gsap.set(worksworkInner, {
    opacity: 0,
    y: 30,
  });

  gsap.to(worksWorkTitle, {
    opacity: 1,
    y: 0,
    scrollTrigger: {
      trigger: works,
      start: "top center", //アニメーションが始まる位置
    },
    duration: 0.7,
  });
  gsap.to(worksworkInner, {
    opacity: 1,
    y: 0,
    scrollTrigger: {
      trigger: worksWorkTitle,
      start: "top center", //アニメーションが始まる位置
    },
    duration: 0.7,
    delay: 0.5,
  });
</script>

<style>
  .works {
    background-color: white;
    padding: 0 0 10% 0;
  }

  .works::after {
    content: "";
    width: 40vw;
  }

  .works__work {
    width: 90%;
    margin: 0 auto;
  }
  @media screen and (max-width: 1026px) {
    .works__work {
      width: 100%;
    }
  }

  .works__work__title {
    font-family: "Lobster";
    font-size: 4.5em;
    padding: 2% 0 60px 0;
  }
  @media screen and (min-width: 482px) and (max-width: 1025px) {
    .works__work__title {
      font-size: 3.5em;
    }
  }
  @media screen and (max-width: 481px) {
    .works__work__title {
      font-size: 2.5em;
    }
  }

  .works__work__inner {
    width: 90%;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  @media screen and (max-width: 481px) {
    .works__work__inner {
      flex-direction: column;
    }
  }
</style>
