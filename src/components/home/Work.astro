---
import WorkCard from "../UIKit/WorkCard .astro";
import Linker from "../UIKit/Linker.astro";

type Work = {
  contents: Contents[];
};

type Contents = {
  id: string;
  image: Image;
  title: string;
  href: string;
  use_tech: string;
  comment: string;
};

type Image = {
  url: string;
};

const myMicroCMSApiUrl = `https://${
  import.meta.env.MICROCMS_SERVICE_DOMAIN_PORTFOLIO
}.microcms.io/api/v1/works?orders=-publishedAt&limit=2`;

const res = await fetch(myMicroCMSApiUrl, {
  headers: {
    "X-MICROCMS-API-KEY": import.meta.env.MICROCMS_API_KEY_PORTFOLIO,
  },
});
const getFetchData: Work = await res.json();
---

<section class="works" id="work">
  <div class="works__work">
    <h2 class="works__work__title">
      Works<span class="works__work__title__sub">作品</span>
    </h2>
    <div class="works__work__inner">
      {
        getFetchData.contents.map((work: Contents) => (
          <WorkCard
            image={work.image.url}
            href={`/work/${work.id}`}
            title={work.title}
            use_tech={work.use_tech}
            comment={work.comment}
          />
        ))
      }
    </div>
    <div class="works__work__linker">
      <Linker href="/work" msg="Works→" target={"_self"} />
    </div>
  </div>
</section>

<script>
  import { intersection } from "../../ts/function";

  intersection(document.querySelectorAll(".works__work__title"));
  intersection(document.querySelectorAll(".works__work__linker"));
</script>

<style>
  .works {
    background-color: var(--main-color);
    padding: 0 0 60px 0;
  }

  .works::after {
    content: "";
    width: 40vw;
  }

  .works__work {
    width: var(--base-width);
    margin: 0 auto;
  }

  .works__work__title {
    color: var(--accent-color);
    font-size: 4.5em;
    padding: 0 0 60px 0;
    opacity: 0;
    transform: translateX(-30px);
  }
  @media screen and (min-width: 482px) and (max-width: 1025px) {
    .works__work__title {
      font-size: 3.5em;
      transform: translateY(30px);
    }
  }
  @media screen and (max-width: 481px) {
    .works__work__title {
      font-size: 2.5em;
      transform: translateY(30px);
      padding: 0 0 30px 0;
    }
  }

  .works__work__title__sub {
    font-size: 0.25em;
    color: var(--subtextColor);
  }

  .works__work__title__sub::before {
    content: "";
    display: inline-block;
    width: 20px;
    border-bottom: solid 1px var(--subtextColor);
    margin: 0 5px 0 5px;
  }

  .works__work__title.active {
    animation: animationName 0.5s ease 0.5s 1 forwards;
  }

  .works__work__inner {
    width: 95%;
    margin: 0 auto;
  }
  @media screen and (max-width: 1026px) {
    .works__work__inner {
      width: 100%;
    }
  }
  .works__work__linker {
    font-size: 24px;
    margin-top: 30px;
    text-align: right;
    opacity: 0;
    transform: translateX(30px);
  }
  @media screen and (max-width: 1026px) {
    .works__work__linker {
      margin-top: 10px;
      font-size: 18px;
      transform: translateY(30px);
    }
  }

  .works__work__linker.active {
    animation: animationName 0.5s ease 0.5s 1 forwards;
  }

  @keyframes animationName {
    100% {
      opacity: 1;
      transform: translate(0, 0);
    }
  }
</style>
