    </ul>
  </nav>
</header>

<script>
  const navToggle = document.querySelector(".navToggle") as Element;
  const navi = document.querySelector(".navi") as Element;

  if (navToggle != null) {
    console.log("error: navToggle get element");
  }
  if (navi != null) {
    console.log("error: navi get element");
  }
  navToggle.addEventListener("click", () => {
    navToggle.classList.toggle("is-active");
    navi.classList.toggle("is-open");
  });
</script>

<style>
  .black {
    position: relative;
    color: black;
    display: inline-block;
  }

  .between {
    align-items: center;
    justify-content: space-between;
  }

  .grid {
    display: flex;
  }

  .header {
    z-index: 1;
    position: fixed;
    top: 0;
    width: 100%;
    height: 70px;
    align-items: center;
  }

  .header__inner {
    z-index: 2;
    width: 90%;
    margin: 0 auto;
  }

  .header__logo {
    font-family: "Great Vibes", cursive;
    font-size: 43px;
  }

  .header__navi {
    width: 40%;
  }
  @media screen and (max-width: 1026px) {
    .header__navi {
      display: none;
    }
  }

  .header__navi .black:after {
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: #000;
    transform: translate(-15%, 0);
    transition: transform cubic-bezier(0.215, 0.61, 0.355, 1) 0.4s;
    content: "";
    opacity: 0;
  }

  .header__navi .black:hover::after {
    transform: translate(0, 0);
    opacity: 1;
  }

  .navToggle {
    display: none;
  }
  @media screen and (max-width: 1025px) {
    .navToggle {
      z-index: 2;
      display: block;
      position: relative;
      right: 3px;
      top: 1px;
      width: 42px;
      height: 51px;
      cursor: pointer;
      text-align: center;
    }
  }

  .navToggle span {
    display: block;
    position: absolute;
    width: 30px;
    border-bottom: solid 4px #555;
    -webkit-transition: 0.35s ease-in-out;
    -moz-transition: 0.35s ease-in-out;
    transition: 0.35s ease-in-out;
    left: 6px;
  }
  .navToggle span:nth-child(1) {
    top: 9px;
  }
  .navToggle span:nth-child(2) {
    top: 18px;
  }
  .navToggle span:nth-child(3) {
    top: 27px;
  }
  .navToggle span:nth-child(4) {
    border: none;
    color: #eee;
    font-size: 9px;
    font-weight: bold;
    top: 34px;
  }
  /* 最初のspanをマイナス45度に */
  .navToggle.is-active span {
    top: 18px;
    left: 6px;
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    transform: rotate(-45deg);
  }
  .navToggle.is-active span:nth-child(2),
  .navToggle.is-active span:nth-child(3) {
    top: 18px;
    -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    transform: rotate(45deg);
  }

  .navi {
    display: none;
    z-index: 1;
    height: 100%;
    width: 100%;
    background-color: #ece4e4;
    text-align: center;
    position: fixed;
    top: 0%;
  }

  .navi.is-open {
    display: block;
    transition: all 0.5s;
  }
  .navi__wrap {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    height: 100%;
  }
  .navi li {
    width: 100%;
    padding: 5px;
  }
  .navi li a {
    font-size: 3em;
    letter-spacing: 5px;
  }
</style>
