<header class="header grid">
  <div class="header__inner grid between">
    <div class="header__logo"><a class="black" href="/">T.W</a></div>
    <ul class="header__navi grid between">
      <li>
        <a class="black" href="/">Home</a>
      </li>
      <li>
        <a class="black" href="/about">About me</a>
      </li>
      <li>
        <a class="black" href="/work">Works</a>
      </li>
      <li>
        <a class="black" href="/blog">Tech Blogs</a>
      </li>
    </ul>

    <div class="navToggle">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <nav class="navi">
    <ul class="navi__wrap">
      <li>
        <a class="black" href="/">Home</a>
      </li>
      <li>
        <a class="black" href="/about">About me</a>
      </li>
      <li>
