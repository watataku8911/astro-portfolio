<style>

  .black {
    color: #000;
  }

  .between {
    align-items: center;
    justify-content: space-between;
  }

  .grid {
    display: flex;
  }

  .header {
    z-index: 1;
    position: fixed;
    top: 0;
    width: 100%;
    height: 70px;
    align-items: center;
  }

  .header__inner{
    width: 90%;
    margin: 0 auto;
  }

  .header__logo {
    font-family: 'Great Vibes', cursive;
    font-size: 43px;
  }

  .header__navi {
    width: 40%;
  }

  .navToggle {
    z-index: 2;
    display: block;
    /* position: fixed;
    right: 8px;
    top: 12px; */
    width: 42px;
    height: 51px;
    cursor: pointer;
    text-align: center;
  }
  .navToggle span {
    display: block;
    position: absolute;
    width: 30px;
    border-bottom: solid 4px #555;
    -webkit-transition: 0.35s ease-in-out;
    -moz-transition: 0.35s ease-in-out;
    transition: 0.35s ease-in-out;
    left: 6px;
  }
  .navToggle span:nth-child(1) {
    top: 9px;
  }
  .navToggle span:nth-child(2) {
    top: 18px;
  }
  .navToggle span:nth-child(3) {
    top: 27px;
  }
  .navToggle span:nth-child(4) {
    border: none;
    color: #eee;
    font-size: 9px;
    font-weight: bold;
    top: 34px;
  }
  /* 最初のspanをマイナス45度に */
  .navToggle.is-active span {
    top: 18px;
    left: 6px;
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    transform: rotate(-45deg);
  }
  .navToggle.is-active span:nth-child(2),
  .navToggle.is-active span:nth-child(3) {
    top: 18px;
    -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    transform: rotate(45deg);
  }

  .navi {
    display: none;
    width: 100%;
    background-color: #ece4e4;
    text-align: center;
    position: fixed;
    top: 0%;
    z-index: 1;
    height: 100vh;
  }

  .navi.is-open {
    display: block;
    /* animation: animationName ease 1 forwards; */
  }
  .navi__wrap {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  .navi li {
    width: 100%;
    padding: 5px;
  }
  .navi li a {
    font-size: 3em;
    letter-spacing: 5px;
    color: black;
  }

  @keyframes animationName {
    100% {
      opacity: 1;
      transform: translate(0, 0);
    }
  }
</style>
