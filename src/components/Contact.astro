---
import Spacer from "./UIKit/Speacer/Speacer";
import TitleLarge from "./UIKit/TitleLarge.astro";
---

<section class="contacts" id="contact">
  <div class="contacts__contact">
    <TitleLarge titleEn="Contact me" titleJa="連絡する" />
    <div class="contacts__contact__inner">
      <p class="contacts__contact__inner__message">
        <a
          href="https://twitter.com/watataku8911"
          target="_blank"
          rel="nofollow noopener noreferrer">X(旧:Twitter)</a
        >がありますので、ご連絡の際はX(旧:Twitter)のDMまでお願いします。
        またフォローの方もお待ちしております。
      </p>
    </div>
    <Spacer height={"60"} />
  </div>
</section>

<script>
  import { intersection } from "../ts/function";

  intersection(document.querySelectorAll(".contacts__contact__inner__message"));
</script>

<style>
  .contacts {
    background-color: var(--main-color);
  }

  .contacts__contact {
    width: var(--base-width);
    margin: 0 auto;
  }

  .contacts__contact__inner {
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contacts__contact__inner__message {
    font-size: clamp(0.75rem, 0.659rem + 0.45vw, 1rem);
    opacity: 0;
    transform: translate3d(0, 20px, 0);
    color: var(--accent-color);
    word-wrap: break-word;
  }
  @media screen and (max-width: 1025px) {
    .contacts__contact__inner__message {
      transform: translate3d(0, 0, 0);
    }
  }

  .contacts__contact__inner__message a {
    border-bottom: 1px var(--accent-color) solid;
  }

  @media (hover: hover) {
    .contacts__contact__inner__message a:hover {
      color: var(--sub-color);
      border-bottom: none;
    }
  }

  .contacts__contact__inner__message.active {
    animation: animationName 0.5s ease 0.5s 1 forwards;
  }

  @keyframes animationName {
    100% {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }
</style>
