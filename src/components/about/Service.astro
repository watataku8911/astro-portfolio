---
import serviceList from "../../../public/data/service.json";
import ServiceCard from "../UIKit/ServiceCard.astro";

type Service = {
  id: number;
  image: string;
  title: string;
  width: number;
  height: number;
  text: string;
};
---

<div class="abouts__about__service">
  {
    serviceList.map((service: Service) => (
      <ServiceCard
        image={service.image}
        title={service.title}
        width={service.width}
        height={service.height}
        text={service.text}
      />
    ))
  }
</div>

<style>
  .abouts__about__service {
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
    row-gap: 20px;
  }
</style>
