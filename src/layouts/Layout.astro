---
import Header from "../components/Header/Header";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer/Footer";

export interface Props {
  title: string;
  description: string;
  site_url: string;
  ogp?: string;
}

const { title, description, site_url, ogp } = Astro.props;

const baseUrl = Astro.url.origin;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="watataku,Watataku,わたたく,ワタタク,フロントエンドエンジニア"
    />
    <meta name="description" content={description} />
    <meta property="url" content={site_url} />

    <!-- さわらびゴシック -->
    <link
      href="https://fonts.googleapis.com/css?family=Sawarabi+Gothic"
      rel="stylesheet"
    />
    <!-- Lobster -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton&family=Libre+Baskerville:wght@700&family=Lobster&family=Nunito:ital,wght@1,300&display=swap"
      rel="stylesheet"
    />
    <!-- Great Vibes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton&family=Great+Vibes&family=Libre+Baskerville:wght@700&family=Lobster&family=Nunito:ital,wght@1,300&display=swap"
      rel="stylesheet"
    />

    <!-- OGP  -->
    <meta property="og:site_name" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={site_url} />
    {
      ogp ? (
        <meta property="og:image" content={ogp} />
      ) : (
        <meta property="og:image" content={`${baseUrl}/img/Hight_main.jpeg`} />
      )
    }

    <!-- /OGP -->

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    {
      ogp ? (
        <meta name="twitter:image:src" content={ogp} />
      ) : (
        <meta
          name="twitter:image:src"
          content={`${baseUrl}/img/Hight_main.jpeg`}
        />
      )
    }
    <!-- /Twitter -->

    <link rel="stylesheet" href="/css/reset.css" />
    <script>
      import ASScroll from "@ashthornton/asscroll";

      // https://github.com/ashthornton/asscroll
      const asscroll = new ASScroll();

      window.addEventListener("load", () => {
        asscroll.enable();
      });
    </script>
    <title>{title}</title>
  </head>
  <body>
    <div class="c-loader-bg js-loader-bg">
      <div class="c-loader-dot js-loader-dot-wrap">
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="shadow"></div>
        <div class="shadow"></div>
        <div class="shadow"></div>
        <h6 class="loading-text">Loading</h6>
      </div>
    </div>

    <Header client:load />
    <div asscroll-container>
      <div>
        <slot />
        <Contact />
        <Footer client:load />
      </div>
    </div>

    <style is:global>
      :root {
        --main-color: #addff2;
        --sub-color: #fff;
        --accent-color: #000;
        --humberger-color: #555;
        --text-color: #000;
        --subtextColor: #444;
        --card-bgColor: #fffdf9;
        --hover-bgColor: #eee;
        --hover-teColor: #111;

        --base-width: 85%;
        --card-size-width-pc: 31%;
      }

      [data-theme="dark"] {
        --main-color: #8295cc;
        --sub-color: #141619;
        --accent-color: #fffdf9;
        --humberger-color: #fff;
        --subtextColor: #ddd;
        --card-bgColor: #2d2d34;
        --hover-bgColor: #eee;
        --hover-teColor: #111;
      }

      /* ローディング画面 */
      .c-loader-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #4d4e4d;
        z-index: 999;
        display: grid;
        place-items: center;
        pointer-events: none;
        transition: 0.3s;
      }

      .c-loader-dot {
        width: 200px;
        height: 60px;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
      }

      .circle {
        width: 20px;
        height: 20px;
        position: absolute;
        border-radius: 50%;
        background-color: #fff;
        left: 15%;
        transform-origin: 50%;
        animation: circle 0.5s alternate infinite ease;
      }

      @keyframes circle {
        0% {
          top: 60px;
          height: 5px;
          border-radius: 50px 50px 25px 25px;
          transform: scaleX(1.7);
        }
        40% {
          height: 20px;
          border-radius: 50%;
          transform: scaleX(1);
        }
        100% {
          top: 0%;
        }
      }

      .circle:nth-child(2) {
        left: 45%;
        animation-delay: 0.2s;
      }

      .circle:nth-child(3) {
        left: auto;
        right: 15%;
        animation-delay: 0.3s;
      }

      .shadow {
        width: 20px;
        height: 4px;
        border-radius: 50%;
        background-color: rgba(0, 0, 0, 0.5);
        position: absolute;
        top: 62px;
        transform-origin: 50%;
        z-index: -1;
        left: 15%;
        filter: blur(1px);
        animation: shadow 0.5s alternate infinite ease;
      }

      @keyframes shadow {
        0% {
          transform: scaleX(1.5);
        }
        40% {
          transform: scaleX(1);
          opacity: 0.7;
        }
        100% {
          transform: scaleX(0.2);
          opacity: 0.4;
        }
      }

      .shadow:nth-child(4) {
        left: 45%;
        animation-delay: 0.2s;
      }

      .shadow:nth-child(5) {
        left: auto;
        right: 15%;
        animation-delay: 0.3s;
      }

      .c-loader-dot .loading-text {
        position: absolute;
        top: 75px;
        font-family: "Lato";
        font-size: 20px;
        letter-spacing: 12px;
        color: #fff;
        left: 15%;
      }
    </style>
  </body>
</html>
