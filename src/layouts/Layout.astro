        --main-color: #addff2;
        --sub-color: #fff;
        --accent-color: #000;
        --humberger-color: #555;
        --text-color: #000;
        --subtextColor: #444;
        --card-bgColor: #fffdf9;
        --hover-bgColor: #eee;
