---
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="watataku,Watataku,わたたく,ワタタク,フロントエンドエンジニア"
    />
    <meta name="description" content={description} />

    <!-- さわらびゴシック -->
    <link
      href="https://fonts.googleapis.com/css?family=Sawarabi+Gothic"
      rel="stylesheet"
    />
    <!-- Lobster -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton&family=Libre+Baskerville:wght@700&family=Lobster&family=Nunito:ital,wght@1,300&display=swap"
      rel="stylesheet"
    />

    <!-- OGP  -->
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://watataku-portfolio.web.app/" />
    <meta
      property="og:image"
      content="https://watataku-portfolio.web.app/img/Hight_main.67495da6.jpeg"
    />
    <meta property="og:site_name" content={title} />
    <!-- /OGP -->

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta
      name="twitter:image:src"
      content="https://watataku-portfolio.web.app/img/Hight_main.67495da6.jpeg"
    />
    <!-- /Twitter -->

    <title>{title}</title>
  </head>
  <body>
    <slot />
    <Footer />
    <style is:global>
      :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          #da62c4 30%,
          white 60%
        );
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        font-family: "Sawarabi Gothic";
        background-color: #fff;
      }

      a {
        text-decoration: none;
      }

      li {
        list-style: none;
      }

      .module--spacing--small {
        height: 20px;
      }
    </style>
  </body>
</html>
