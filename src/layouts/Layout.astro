---
import Header from "../components/Header/Header";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer/Footer";

export interface Props {
  title: string;
  description: string;
  site_url: string;
  ogp?: string;
}

const { title, description, site_url, ogp } = Astro.props;

const baseUrl = Astro.url.origin;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="watataku,Watataku,わたたく,ワタタク,フロントエンドエンジニア"
    />
    <meta name="description" content={description} />
    <meta property="url" content={site_url} />

    <!-- さわらびゴシック -->
    <link
      href="https://fonts.googleapis.com/css?family=Sawarabi+Gothic"
      rel="stylesheet"
    />
    <!-- Lobster -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton&family=Libre+Baskerville:wght@700&family=Lobster&family=Nunito:ital,wght@1,300&display=swap"
      rel="stylesheet"
    />
    <!-- Great Vibes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton&family=Great+Vibes&family=Libre+Baskerville:wght@700&family=Lobster&family=Nunito:ital,wght@1,300&display=swap"
      rel="stylesheet"
    />

    <!-- OGP  -->
    <meta property="og:site_name" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={site_url} />
    {
      ogp ? (
        <meta property="og:image" content={ogp} />
      ) : (
        <meta property="og:image" content={`${baseUrl}/img/Hight_main.jpeg`} />
      )
    }

    <!-- /OGP -->

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    {
      ogp ? (
        <meta name="twitter:image:src" content={ogp} />
      ) : (
        <meta
          name="twitter:image:src"
          content={`${baseUrl}/img/Hight_main.jpeg`}
        />
      )
    }
    <!-- /Twitter -->

    <link rel="stylesheet" href="/css/reset.css" />

    <title>{title}</title>
  </head>
  <body>
    <div class="c-loader-bg js-loader-bg">
      <div class="c-loader-dot js-loader-dot-wrap">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
    <Header client:load />
    <main>
      <slot />
      <Contact />
    </main>
    <Footer client:load />
    <style is:global>
      :root {
        --main-color: #addff2;
        --sub-color: #fff;
        --accent-color: #000;
        --humberger-color: #555;
        --text-color: #000;
        --subtextColor: #444;
        --card-bgColor: #fffdf9;
        --hover-bgColor: #eee;
        --hover-teColor: #111;

        --base-width: 85%;
        --card-size-width-pc: 31%;
      }

      [data-theme="dark"] {
        --main-color: #8295cc;
        --sub-color: #141619;
        --accent-color: #fffdf9;
        --humberger-color: #fff;
        --subtextColor: #ddd;
        --card-bgColor: #2d2d34;
        --hover-bgColor: #eee;
        --hover-teColor: #111;
      }

      /* ローディング画面 */
      .c-loader-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: var(--main-color);
        z-index: 999;
        display: grid;
        place-items: center;
        pointer-events: none;
        transition: 0.3s;
      }

      .c-loader-dot {
        display: inline-flex;
        align-items: center;
        justify-content: start;
        pointer-events: none;
      }

      .c-loader-dot > span {
        display: block;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background-color: var(--accent-color);
      }

      .c-loader-dot > span + span {
        margin-left: 4rem;
      }
    </style>
  </body>
</html>
