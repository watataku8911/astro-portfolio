---
import Layout from "../layouts/Layout.astro";
import TitleLarge from "../components/UIKit/TitleLarge.astro";
import IconButton from "../components/UIKit/IconButton/IconButton";
import TitleSmall from "../components/UIKit/TitleSmall.astro";
import Service from "../components/About/Service.astro";
import Career from "../components/About/Career.astro";
import Speacer from "../components/UIKit/Speacer/Speacer";
import snsArray from "../../public/data/sns.json";

// サイトのURLを取得
const site_url = "https://watataku-portfolio.vercel.app" + Astro.url.pathname;
---

<Layout
  title="ABOUT | Watataku's ポートフォリオサイト"
  description="WatatakuのAboutページです。"
  site_url={site_url}
  ogp="https://watataku-portfolio.vercel.app/img/ogp.png"
>
  <Speacer height={"80"} />
  <section class="abouts-page">
    <div class="abouts-page__about">
      <TitleLarge titleEn="About me" titleJa="私について" />
      <div class="image-box">
        <img
          class="abouts-page__about__img"
          src="/img/Hight_icon_watataku's_radius.png"
          width="400"
          height="400"
          alt="Watataku"
        />
        <p class="abouts-page__about__name">Watataku</p>
      </div>
      <div class="abouts-page__about__text">
        <p>
          1996年大阪府生まれ。Web/ITの専門学校にて、ITとはなんぞや？を学んだ後、新卒でSIerに入社。
          その後、色々な事があり、現在はSNSや技術ブログを通して情報発信しながらマークアップエンジニア/フロントエンドエンジニアとして活動中.
        </p>
      </div>
      <div class="abouts-page__about__text">
        <p>
          I was born in Osaka,Japan in 1996, Learned about "what is IT?" by
          tvocational school.After,Worked "SIer" at new graduate in 2019, But I
          was diagonsed in called intractable disease "SCD" in
          2019.Now,Currently working as a markup developer/frontend developer
          while transmitting information through SNS and blogs.I hope you enjoy
          the site.
        </p>
      </div>
      <div class="abouts-page__about__sns__area">
        {
          snsArray.map((sns) => (
            <IconButton href={sns.url} icon={sns.icon} alt={sns.alt} />
          ))
        }
      </div>
    </div>

    <div class="abouts-page__about__inner">
      <TitleSmall titleEn="Career" titleJa="キャリア" />
      <Career />
    </div>
    <Speacer height={"80"} />
    <div class="abouts-page__about__inner">
      <TitleSmall titleEn="Can do it" titleJa="できること" />
      <Service />
    </div>
  </section>
  <Speacer height={"80"} />
</Layout>

<script>
  import { closeLoadingScreen } from "../ts/function";

  const bodyElement = document.querySelector("body") as HTMLBodyElement;
  window.onload = () => {
    setTimeout(() => {
      closeLoadingScreen(".js-loader-bg");
      if (bodyElement != null) {
        bodyElement.classList.add("loaded");
      }
    }, 1500);
  };
</script>

<style>
  .abouts-page__about {
    width: var(--base-width);
    margin: 0 auto;
  }

  .image-box {
    text-align: center;
  }

  .abouts-page__about .abouts-page__about__img {
    width: max(15%, 150px);
  }

  .abouts-page__about__name {
    color: var(--accent-color);
    font-size: 24px;
    margin: 10px 0 10px 0;
  }

  .abouts-page__about__text {
    color: var(--accent-color);
    font-size: 14px;
    max-width: 720px;
    margin: 10px auto;
  }

  .abouts-page__about__sns__area {
    margin: 0 auto;
    padding: 16px 0 48px 0;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: clamp(1rem, 3.25vw, 4.5rem);
  }

  .abouts-page__about__inner {
    width: var(--base-width);
    margin: 0 auto;
  }
  @media screen and (max-width: 481px) {
    .abouts-page__about__inner {
      margin: 0 auto 10px;
    }
  }
</style>
