---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header/Header";
import WorkCard from "../components/UIKit/WorkCard .astro";

type Work = {
  contents: Contents[];
};

type Contents = {
  image: Image;
  title: string;
  href: string;
  use_tech: string;
  comment: string;
};

type Image = {
  url: string;
};

const myMicroCMSApiUrl = `https://${
  import.meta.env.MICROCMS_SERVICE_DOMAIN_PORTFOLIO
}.microcms.io/api/v1/works?orders=-publishedAt&limit=999`;

const res = await fetch(myMicroCMSApiUrl, {
  headers: {
    "X-MICROCMS-API-KEY": import.meta.env.MICROCMS_API_KEY_PORTFOLIO,
  },
});
const getFetchData: Work = await res.json();
---

<Layout title="WORKS | Watataku's ポートフォリオ" description="作品集です">
  <div class="c-loader-bg js-loader-bg">
    <div class="c-loader-dot js-loader-dot-wrap">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
  <Header client:load />
  <section class="works-page" id="work">
    <div class="works-page__work">
      <h2 class="works-page__work__title">
        Works<span class="works-page__work__title--sub">作品</span>
      </h2>
      <div class="works-page__work__inner">
        {
          getFetchData.contents.map((work: Contents) => (
            <WorkCard
              image={work.image.url}
              href={work.href}
              title={work.title}
              use_tech={work.use_tech}
              comment={work.comment}
            />
          ))
        }
      </div>
    </div>
  </section>
</Layout>

<script>
  import {
    displayLoadingScreen,
    closeLoadingScreen,
    intersection,
  } from "../ts/function";

  intersection(document.querySelectorAll(".works-page__work__title"));
  intersection(document.querySelectorAll(".works-page__work__inner"));

  const jsLoaderBg = ".js-loader-bg";
  const jsDot = ".js-loader-dot-wrap > span";

  //メイン
  displayLoadingScreen(jsDot);
  window.onload = () => {
    setTimeout(() => {
      closeLoadingScreen(jsDot, jsLoaderBg);
    }, 2500);
  };
</script>

<style>
  .c-loader-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #addff2;
    z-index: 999;
    display: grid;
    place-items: center;
    pointer-events: none;
    visibility: visible;
    transition: 0.3s;
    opacity: 1;
  }

  .c-loader-bg.load {
    opacity: 0;
    visibility: hidden;
  }

  .c-loader-dot {
    display: inline-flex;
    align-items: center;
    justify-content: start;
    pointer-events: none;
  }

  .c-loader-dot > span {
    display: block;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: #000;
  }

  .c-loader-dot > span + span {
    margin-left: 3rem;
  }

  .works-page {
    background-color: var(--main-color);
    padding: 5% 0 60px 0;
  }
  @media screen and (max-width: 481px) {
    .works-page {
      padding: 80px 0 60px 0;
    }
  }

  .works-page__work {
    width: var(--base-width);
    margin: 0 auto;
  }

  .works-page__work__title {
    color: var(--accent-color);
    font-size: 4.5em;
    padding: 2% 0 30px 0;
  }
  @media screen and (min-width: 482px) and (max-width: 1025px) {
    .works-page__work__title {
      font-size: 3.5em;
      padding: 5% 0 30px 0;
    }
  }
  @media screen and (max-width: 481px) {
    .works-page__work__title {
      font-size: 2.5em;
      padding: 0 0 30px 0;
    }
  }

  .works-page__work__title--sub {
    font-size: 0.25em;
    color: var(--subtextColor);
  }

  .works-page__work__title--sub::before {
    content: "";
    display: inline-block;
    width: 20px;
    border-bottom: solid 1px var(--subtextColor);
    margin: 0 5px 0 5px;
  }

  .works-page__work__inner {
    width: 95%;
    margin: 0 auto;
    opacity: 0;
    transform: translateY(30px);
  }
  @media screen and (max-width: 1026px) {
    .works-page__work__inner {
      width: 100%;
    }
  }

  .works-page__work__inner.active {
    animation: animationName 0.5s ease 0.5s 1 forwards;
  }

  @keyframes animationName {
    100% {
      opacity: 1;
      transform: translate(0, 0);
    }
  }
</style>
