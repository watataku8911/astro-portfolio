---
import Layout from "../layouts/Layout.astro";
import Speacer from "../components/UIKit/Speacer";
import Work from "../components/home/Work.astro";

// サイトのURLを取得
const site_url = Astro.url.href;
---

<Layout
  title="WORKS | Watataku's ポートフォリオ"
  description="作品集です"
  site_url={site_url}
>
  <Speacer height={"80"} />
  <Work limit={"999"} />
</Layout>

<script>
  import { closeLoadingScreen } from "../ts/function";
  const body = document.querySelector("body");
  const jsLoaderBg = ".js-loader-bg";
  window.onload = () => {
    setTimeout(() => {
      closeLoadingScreen(jsLoaderBg);
      if (body != null) {
        body.classList.add("loaded");
      }
    }, 2500);
  };
</script>
