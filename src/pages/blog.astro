---
import Layout from "../layouts/Layout.astro";
import Blog from "../components/home/Blog.astro";
import Speacer from "../components/UIKit/Speacer";

// サイトのURLを取得
const site_url = "https://watataku-portfolio.vercel.app" + Astro.url.pathname;
---

<Layout
  title="BLOG | Watataku's ポートフォリオ"
  description="BLOGページです。"
  site_url={site_url}
>
  <Speacer height={"80"} />
  <Blog
    qiita={"https://qiita.com/watataku8911"}
    zenn={"https://zenn.dev/watataku"}
    watatakuBlog={"https://watataku-blog.vercel.app"}
  />
  <Speacer height={"80"} />
</Layout>

<script>
  import { closeLoadingScreen } from "../ts/function";
  const body = document.querySelector("body");
  const jsLoaderBg = ".js-loader-bg";
  window.onload = () => {
    setTimeout(() => {
      closeLoadingScreen(jsLoaderBg);
      if (body != null) {
        body.classList.add("loaded");
      }
    }, 1500);
  };
</script>
